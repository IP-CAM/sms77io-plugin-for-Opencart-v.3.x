{{ header }} {{ column_left }}

<div id='content'>
    <div class='page-header'>
        <div class='container-fluid'>
            <div class='pull-right'>
                <button
                        class='btn btn-primary'
                        data-toggle='tooltip'
                        form='form-module'
                        title='{{ button_save }}'
                        type='submit'
                >
                    <i class='fa fa-save'></i>
                </button>

                <a
                        class='btn btn-default'
                        data-toggle='tooltip'
                        href='{{ cancel }}'
                        title='{{ button_cancel }}'
                >
                    <i class='fa fa-reply'></i>
                </a>
            </div>

            <h1>{{ heading_settings }}</h1>

            <ul class='breadcrumb'>
                {% for breadcrumb in breadcrumbs %}
                    <li><a href='{{ breadcrumb.href }}'>{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class='container-fluid'>
        {% if error_warning %}
            <div class='alert alert-warning alert-dismissible'>
                <i class='fa fa-exclamation-circle'></i> {{ error_warning }}
                <button type='button' class='close' data-dismiss='alert'>&times;</button>
            </div>
        {% endif %}

        {% if error_unchanged %}
            <div class='alert alert-info alert-dismissible'>
                <i class='fa fa-exclamation-circle'></i> {{ error_unchanged }}
                <button type='button' class='close' data-dismiss='alert'>&times;</button>
            </div>
        {% endif %}

        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h3 class='panel-title'>
                    <i class='fa fa-pencil'></i> {{ text_edit_settings }}
                </h3>
            </div>

            <div class='panel-body'>
                <form
                        action='{{ action }}'
                        class='form-horizontal'
                        enctype='multipart/form-data'
                        id='form-module'
                        method='post'
                >
                    <h2>{{ text_settings_required }}</h2>

                    <div class='form-group'>
                        <label class='col-sm-2 control-label' for='input-key'>
                            {{ setting_key }}
                        </label>

                        <div class='col-sm-10'>
                            <input
                                    class='form-control'
                                    id='input-key'
                                    name='sms77_api_key'
                                    required
                                    value='{{ settings.sms77_api_key }}'
                            />

                            {% if error_key %}
                                <div class='text-danger'>{{ error_key }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <h2>{{ text_settings_default }}</h2>

                    <div class='form-group'>
                        <label class='col-sm-2 control-label' for='input-from'>
                            {{ setting_from }}
                        </label>

                        <div class='col-sm-10'>
                            <input
                                    class='form-control'
                                    id='input-from'
                                    name='sms77_api_from'
                                    value='{{ settings.sms77_api_from }}'
                            />

                            {% if error_from %}
                                <div class='text-danger'>{{ error_from }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class='form-group'>
                        <label class='col-sm-2 control-label' for='input-label'>
                            {{ setting_label }}
                        </label>

                        <div class='col-sm-10'>
                            <input
                                    class='form-control'
                                    id='input-label'
                                    name='sms77_api_label'
                                    pattern='[A-Z|a-z|0-9|.|\-|_|@]+'
                                    value='{{ settings.sms77_api_label }}'

                            />

                            {% if error_label %}
                                <div class='text-danger'>{{ error_label }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class='form-group'>
                        <label class='col-sm-2 control-label' for='input-foreign_id'>
                            {{ setting_foreign_id }}
                        </label>

                        <div class='col-sm-10'>
                            <input
                                    class='form-control'
                                    id='input-foreign_id'
                                    name='sms77_api_foreign_id'
                                    pattern='[A-Z|a-z|0-9|.|\-|_|@]+'
                                    value='{{ settings.sms77_api_foreign_id }}'

                            />

                            {% if error_foreign_id %}
                                <div class='text-danger'>{{ error_foreign_id }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class='form-group'>
                        <label class='col-sm-2 control-label' for='input-udh'>
                            {{ setting_udh }}
                        </label>

                        <div class='col-sm-10'>
                            <input
                                    class='form-control'
                                    id='input-udh'
                                    name='sms77_api_udh'
                                    value='{{ settings.sms77_api_udh }}'
                            />

                            {% if error_udh %}
                                <div class='text-danger'>{{ error_udh }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class='form-group'>
                        <label class='col-sm-2 control-label'
                               for='input-debug'>{{ setting_debug }}
                        </label>

                        <div class='col-sm-10'>
                            <input
                                    {% if settings.sms77_api_debug %}checked{% endif %}
                                    class='form-control'
                                    id='input-debug'
                                    name='sms77_api_debug'
                                    type='checkbox'
                            />

                            {% if error_debug %}
                                <div class='text-danger'>{{ error_debug }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class='form-group'>
                        <label class='col-sm-2 control-label'
                               for='input-no_reload'>{{ setting_no_reload }}</label>

                        <div class='col-sm-10'>
                            <input
                                    {% if settings.sms77_api_no_reload %}checked{% endif %}
                                    class='form-control'
                                    name='sms77_api_no_reload'
                                    id='input-no_reload'
                                    type='checkbox'
                            />

                            {% if error_no_reload %}
                                <div class='text-danger'>{{ error_no_reload }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class='form-group'>
                        <label class='col-sm-2 control-label'
                               for='input-flash'>{{ setting_flash }}</label>

                        <div class='col-sm-10'>
                            <input
                                    {% if settings.sms77_api_flash %}checked{% endif %}
                                    class='form-control'
                                    id='input-flash'
                                    name='sms77_api_flash'
                                    type='checkbox'

                            />

                            {% if error_flash %}
                                <div class='text-danger'>{{ error_flash }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class='form-group'>
                        <label
                                class='col-sm-2 control-label'
                                for='input-performance_tracking'
                        >
                            {{ setting_performance_tracking }}
                        </label>

                        <div class='col-sm-10'>
                            <input
                                    {% if settings.sms77_api_performance_tracking %}
                                        checked
                                    {% endif %}
                                    class='form-control'
                                    id='input-performance_tracking'
                                    name='sms77_api_performance_tracking'
                                    type='checkbox'
                            />

                            {% if error_performance_tracking %}
                                <div class='text-danger'>
                                    {{ error_performance_tracking }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{ footer }}